#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# config
APACHE_VERSION="2.2.19"
APACHE_PATH="apache"
PHP_VERSION="5.3.6"
PHP_PATH="php"
PHING_VERSION="2.4.6"
PHING_PATH="phing"

BIN_DIR=$(dirname $0)
BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

# include .files when moving things around
shopt -s dotglob

cd $BUILD_DIR

# move app things to src
mkdir -p $CACHE_DIR/src
mv * $CACHE_DIR/src
mv $CACHE_DIR/src .

# keep Procfile
if [ -f src/Procfile ]; then
  mv src/Procfile .
fi

# unpack cache
for DIR in $APACHE_PATH $PHP_PATH ; do
  rm -rf $DIR
  if [ -d $CACHE_DIR/$DIR ]; then
    cp -r $CACHE_DIR/$DIR $DIR
  fi
done

# install apache if needed
if [ ! -d $APACHE_PATH ]; then
  APACHE_URL="https://s3.amazonaws.com/php-lp/apache-$APACHE_VERSION.tar.gz"
  echo "-----> Bundling Apache v$APACHE_VERSION"
  curl --silent --max-time 60 --location $APACHE_URL | tar xz
fi

# install php if needed
if [ ! -d $PHP_PATH ]; then
  PHP_URL="https://s3.amazonaws.com/php-lp/php-$PHP_VERSION.tar.gz"
  echo "-----> Bundling PHP v$PHP_VERSION"
  curl --silent --max-time 60 --location $PHP_URL | tar xz
fi

# install phing if needed
if [ ! -d $PHING_PATH ]; then
  mkdir -p $PHING_PATH
  PHING_URL="http://www.phing.info/get/phing-$PHING_VERSION.tgz"
  echo "-----> Bundling Phing v$PHING_VERSION"
  curl --silent --max-time 60 --location $PHING_URL | tar xz -C $PHING_PATH
fi

# update config files
cp $LP_DIR/conf/httpd.conf $APACHE_PATH/conf
cp $LP_DIR/conf/php.ini $PHP_PATH

# make php available on bin
mkdir -p bin
ln -s /app/php/bin/php bin/php

# do the phing thing
export PHP_COMMAND=$PHP_PATH/bin/php
export PHING_HOME=$PHING_PATH
export PHP_CLASSPATH=$PHING_HOME/classes
export LD_LIBRARY_PATH=$PHP_PATH/ext
mkdir -p www
cd src/build
$BUILD_DIR/$PHING_PATH/bin/phing -Ddir.www=$BUILD_DIR/www www
cd $BUILD_DIR

cat >>boot.sh <<EOF
sed -i 's/Listen 80/Listen '\$PORT'/' /app/apache/conf/httpd.conf
for var in \`env|cut -f1 -d=\`; do
  echo "PassEnv \$var" >> /app/apache/conf/httpd.conf;
done
touch /app/apache/logs/error_log
touch /app/apache/logs/access_log
tail -F /app/apache/logs/error_log &
tail -F /app/apache/logs/access_log &
export LD_LIBRARY_PATH=/app/php/ext
export PHP_INI_SCAN_DIR=/app/www
echo "Launching apache"
exec /app/apache/bin/httpd -DNO_DETACH
EOF

chmod +x boot.sh

# repack cache
mkdir -p $CACHE_DIR
for DIR in $APACHE_PATH $PHP_PATH ; do
  rm -rf $CACHE_DIR/$DIR
  cp -R $DIR $CACHE_DIR/$DIR
done
